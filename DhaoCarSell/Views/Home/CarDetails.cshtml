@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@model DhaoCarSell.Models.Car

@inject IViewLocalizer Localizer


@{
    //Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="assets/images/favicon.ico">

    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <title>@Localizer["CarDetails"]</title>
     <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/owl.css">
</head>

<body> 
    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>  
    <!-- ***** Preloader End ***** -->

    <!-- Page Content -->
    <br />
    <br />

    <div class="products">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div>
              <img src="~/assets/images/@Model.Image" alt="" class="img-fluid wc-image">
            </div>
            <br>
          </div>

          <div class="col-md-6">
            <form action="#" method="post" class="form">
              <ul class="list-group list-group-flush">
               <li class="list-group-item">
                    <div class="clearfix">
                         <span class="pull-left">@Localizer["Type"]</span>

                         <strong class="pull-right">@Localizer["UsedVehicle"]</strong>
                    </div>
               </li>

               <li class="list-group-item">
                    <div class="clearfix">
                         <span class="pull-left">@Localizer["Make"]</span>

                         <strong class="pull-right">@Model.Make</strong>
                    </div>
               </li>

               <li class="list-group-item">
                    <div class="clearfix">
                         <span class="pull-left"> @Localizer["Model"]</span>

                         <strong class="pull-right">@Model.Model</strong>
                    </div>
               </li>

               <li class="list-group-item">
                    <div class="clearfix">
                         <span class="pull-left">@Localizer["FirstRegistration"]</span>

                         <strong class="pull-right">@Model.Year.Year</strong>
                    </div>
               </li>

               <li class="list-group-item">
                    <div class="clearfix">
                         <span class="pull-left">@Localizer["Km"]</span>

                         <strong class="pull-right">@Model.Km</strong>
                    </div>
               </li>

               <li class="list-group-item">
                    <div class="clearfix">
                         <span class="pull-left">@Localizer["Fuel"]</span>

                         <strong class="pull-right">@Model.Fuel</strong>
                    </div>
               </li>

               <li class="list-group-item">
                    <div class="clearfix">
                         <span class="pull-left">@Localizer["Engine"]</span>

                         <strong class="pull-right">@Model.CmCube</strong>
                    </div>
               </li>

               <li class="list-group-item">
                    <div class="clearfix">
                         <span class="pull-left">@Localizer["Power"]</span>

                         <strong class="pull-right">@Model.Power</strong>
                    </div>
               </li>
              </ul>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">             
            <div class="section-heading">
              <h2>@Localizer["VehicleDescription"]</h2>
            </div>

            <div class="left-content">
              <p>@Model.Description</p>
          </div>

          <div class="col-md-6">
            <div class="section-heading">
              <h2>@Localizer["VehicleExtras"]</h2>
            </div>
            
            <div class="left-content">
              <p>@Localizer["Abs"] <br>
                  @Localizer["LeatherSeats"]<br>
                  @Localizer["PowerAssistedSteering"] <br>
                  @Localizer["ElectricHeatedSeats"] <br>
                  @Localizer["XenonHeadlights"]
                </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-6">

            <div class="section-heading">
              <h2>@Localizer["ContactDetails"]</h2>
            </div>
            
            <div class="left-content">
              <p>
                <span>@Localizer["Name"]</span>

                <br>

                <strong>John</strong>
              </p>

              <p>
                <span>@Localizer["Phone"]</span>

                <br>
                
                <strong>
                  <a href="tel:123-456-789">123589465</a>
                </strong>
              </p>

              <p>
                <span>@Localizer["MobilePhone"]</span>

                <br>
                
                <strong>
                  <a href="tel:456789123">89489651356</a>
                </strong>
              </p>

              <p>
                <span>@Localizer["Email"]</span>

                <br>
                
                <strong>
                  <a href="mailto:john@carsales.com">john@carsales.com</a>
                </strong>
              </p>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>

     <!-- Bootstrap core JavaScript -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>


    <!-- Additional Scripts -->
    <script src="~/assets/js/custom.js"></script>
    <script src="~/assets/js/owl.js"></script>

<div>
   @{
        //<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
       //<a asp-action="Index">Back to List</a>
   }
</div>
</body>
</html>
